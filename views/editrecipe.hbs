<div id="uploadcontainer" class="container">
  <div class="page-name">
    <h1>Upload Recipe</h1>
  </div>
  <div id="rcontainer">
    <form action="/editrecipe/{{qRecipe._id}}/update?_method=PUT" method="post">
      <label for="recipeName">
        Recipe Name
      </label>
      <input type="text" name="recipeName" id="recipeName" placeholder="Name" value="{{qRecipe.recipeName}}" />

      <div class="recipetext">
        <label for="recipeIngredients">Ingredients<span id="smallingredients">(Also input quantity; be
            descriptive)</span></label>
        <textarea id="recipeIngredients" name="recipeIngredients"placeholder="Ingredients">{{qRecipe.recipeIngredients}}</textarea>
      </div>

      <div class="recipetext">
        <label for="recipeInstructions">Instructions</label>
        <br>
        <textarea id="recipeInstructions" name="recipeInstructions" placeholer="Instructions">{{qRecipe.recipeInstructions}}</textarea>
      </div>

      <div class="buttonholder">
        <button type="submit" class="button" id="confirmbutton">Confirm</button>
      </div>
    </form>
  </div>
</div>