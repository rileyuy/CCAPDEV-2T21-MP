<div class="viewrecipe-container">
      <div class="viewrecipe-headername">
        <h1>{{recipe.recipeName}}</h1>
      </div>

      <div class="viewrecipe-profile">
        <img src="/public/images/Profile Icon.png" />
        <a href="#">DEFAULT NAME</a>
      </div>

      <div class="viewrecipe-rating">
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
      </div>

      <div class="viewrecipe-image">
        <img src="/public/uploads/{{recipe.img}}" />
      </div>

      <div class="viewrecipe-info">
        <h1>Ingredients</h1>
        <p>
          {{recipe.recipeIngredients}}
        </p>
      </div>

      <div class="viewrecipe-info">
        <h1>Instructions</h1>
        <p>
          {{recipe.recipeInstructions}}
        </p>
      </div>

      <div class="viewrecipe-button">
        <a href="#" class="button">Add Ingredients to Shopping List</a>
      </div>
    </div>

    <div class="viewrecipe-addcomment">
      <div class="viewrecipe-headername">
        <h1>Add Rating & Comment</h1>
      </div>

      <div class="viewrecipe-rating">
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
      </div>

      <form action="#" method="POST">
        <textarea placeholder="Enter comment here"></textarea>
        <div class="viewrecipe-button">
          <button type="submit" class="button">Comment</button>
        </div>
      </form>
    </div>

    <div class="viewrecipe-comment">
      <div class="viewrecipe-profile" style="padding-top: 100px">
        <img src="/public/images/Profile Icon.png" />
        <a href="login.html">THIS IS A TEMPLATE COMMENT</a>
      </div>

      <div class="viewrecipe-rating">
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
      </div>

      <div class="viewrecipe-usercomment">
        <p>THIS IS A TEMPLATE COMMENT</p>
      </div>

      <div
        class="viewrecipe-button"
        style="padding-top: 0; padding-bottom: 80px"
      >
        <button onclick="location.href=''" class="button">Delete</button>
      </div>
    </div>

    