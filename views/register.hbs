<div id="registercontainer" class="container">
    <div class="page-name">
        <h1>Register</h1>
    </div>
    <form action="/register" method="post">
        <label for="email">E-mail Address</label>
        <input type="text" id="email" name="email" placeholder="Email" required/>
        {{#if errors.email}}
            <p style = color:red id="emailerror" name ="emailerror">{{errors.email.msg}}</p>
        {{/if}}  
        <label for="password">Password</label>    
        <input type="password" id="password" name="password" placeholder="Password" required/>
        {{#if errors.password}}
            <p style = color:red id="passworderror" name ="passworderror">{{errors.password.msg}}</p>
        {{/if}}   
        <label for="firstName">First Name</label>
        <input type="text" id="firstname" name="firstName" placeholder="First Name" required/>
        {{#if errors.firstName}}
            <p style = color:red id="firstnameerror" name ="firstnameerror">{{errors.firstName.msg}}</p>
        {{/if}}
        <label for="lastName">Last Name</label>
        <input type="text" id="lastname" name="lastName" placeholder="Last Name" required/>
        {{#if errors.lastName}}        
            <p style = color:red id="lastnameerror" name ="lastnameerror">{{errors.lastName.msg}}</p>
        {{/if}}
       
        <button type="submit" class="button" id="confirmbutton">
            Register
        </button>
    </form>
</div>