<div class="page-container">
    <div class="accountinfo">
        {{#if isMe}}
        <h1>{{user.firstName}} {{user.lastName}}</h1>
        <p>{{user.email}}</p>
        <a href="/editaccount/:id" class="button">Edit Account</a>
        {{else}}
        <h1>{{queriedUser.firstName}} {{queriedUser.lastName}}</h1>
        <p>{{queriedUser.email}}</p>
        {{/if}}

    </div>
    {{log isMe}}
    {{#if isMe}}
    {{#each userRecipes as |recipes|}}
        <div class="recipes-overview-container">
            <a href="/viewrecipe/{{recipes._id}}">
                <div class="recipes-overview-title-container">
                    <div class="recipes-overview-title">
                        <h2>{{recipes.recipeName}}</h2>
                    </div>
                </div>

                <div class="recipes-overview-image">
                    <img src="/public/uploads/{{recipes.img}}" class="recipes-thumbnail" />
                </div>
            </a>

            <div class="recipes-overview-info">
                <div class="overview-manage-container">
                    <a href="/editrecipe/{{recipes._id}}">Edit</a>
                    <a href="/deleterecipe/{{recipes._id}}">Delete</a>
                </div>
                <div class="overview-rating-container">
                    {{#if this.rating}}
                    <i class="fas fa-star"></i>
                    <p style="margin-left: 15px;">{{this.rating}} out of 5</p>
                    {{else}}
                    <i class="fas fa-star"></i>
                    <p style="margin-left: 15px;">No Rating</p>
                    {{/if}}
                </div>
            </div>
        </div> 

    {{/each}}
    {{else}}
    {{#each userRecipes as |recipes|}}
        <div class="recipes-overview-container">
            <a href="/viewrecipe/{{recipes._id}}">
                <div class="recipes-overview-title-container">
                    <div class="recipes-overview-title">
                        <h2>{{recipes.recipeName}}</h2>
                    </div>
                </div>

                <div class="recipes-overview-image">
                    <img src="/public/uploads/{{recipes.img}}" class="recipes-thumbnail" />
                </div>
            </a>

        <div class="recipes-overview-info">
            <div class="overview-manage-container">
                {{!-- <a href="/editrecipe/{{recipes._id}}">Edit</a>
                <a href="/deleterecipe/{{recipes._id}}">Delete</a> --}}
            </div>
            <div class="overview-rating-container">
                {{#if this.rating}}
                <i class="fas fa-star"></i>
                <p style="margin-left: 15px;">{{this.rating}} out of 5</p>
                {{else}}
                <i class="fas fa-star"></i>
                <p style="margin-left: 15px;">No Rating</p>
                {{/if}}
            </div>
        </div>
    </div> 
    {{/each}}
    {{/if}}
    
</div>