<div class="page-container">
    <div class="accountinfo">
        {{#if isMe}}
        <h1>{{user.firstName}} {{user.lastName}}</h1>
        <p>{{user.email}}</p>
        <a href="/editaccount/:id" class="button">Edit Account</a>
        {{else}}
        <h1>{{queriedUser.firstName}} {{queriedUser.lastName}}</h1>
        <p>{{queriedUser.email}}</p>
        {{/if}}

    </div>

    {{#each userRecipes}}
    <div class="recipes-overview-container">
        <a href="/viewrecipe/{{userRecipes._id}}">
            <div class="recipes-overview-title">
                <h2>{{userRecipes.recipeName}}</h2>
            </div>

            <div class="recipes-overview-image">
                <img src="/public/uploads/{{userRecipes.img}}" class="recipes-thumbnail" />
            </div>
        </a>

        <div class="recipes-overview-info">
            <div class="accountrecipe-buttoncontainer">
                <a href="/editrecipe/:id" class="button">Edit</a>
                <a href="/deleterecipe/:id" class="button">Delete</a>
            </div>

            <div class="overview-rating-container">
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
                <i class="fas fa-star"></i>
            </div>
        </div>
    </div>
    {{/each}}
</div>